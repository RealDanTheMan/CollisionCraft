#version 330

in vec3 pix_position;
in vec3 cam_position;

uniform float SV_GRID_RANGE = 2000.0;
out vec4 frag_color;

/// Main pixel shader entry point.
void main()
{
    float cam_distance = distance(pix_position, cam_position);
    float dist_fac = cam_distance / SV_GRID_RANGE;
    frag_color = vec4(0.66, 0.66, 0.66, 1.0 - dist_fac);
}
