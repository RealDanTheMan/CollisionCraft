#version 330

uniform float SV_GRID_RANGE;
in vec3 local_position;
out vec4 frag_color;

/// Main pixel shader entry point.
void main()
{
    float dist_fac = smoothstep(SV_GRID_RANGE * 0.66f, SV_GRID_RANGE * 1.15f, length(local_position));
    frag_color = vec4(0.33, 0.33, 0.33, 1.0 - dist_fac);
}
